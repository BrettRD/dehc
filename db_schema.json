{
    "Person":
    {
        "fields":
        {
            "Display Name":                      {"index": 0,  "type": "text",   "regex": ".*",                      "required": true},
            "Family Name":                       {"index": 1,  "type": "text",   "regex": ".*",                      "required": false},
            "Given Name(s)":                     {"index": 2,  "type": "text",   "regex": ".*",                      "required": false},
            "Sex":                               {"index": 3,  "type": "option", "options":["", "M", "F", "X"],      "required": false},
            "Date Of Birth":                     {"index": 4,  "type": "text",   "regex": ".*",                      "required": false},
            "Passport Number":                   {"index": 5,  "type": "text",   "regex": ".*",                      "required": false},
            "Passport Expiry":                   {"index": 6,  "type": "text",   "regex": ".*",                      "required": false},
            "Nationality":                       {"index": 7,  "type": "text",   "regex": ".*",                      "required": false},
            "Home Address":                      {"index": 8,  "type": "text",   "regex": ".*",                      "required": false},
            "Destination Address":               {"index": 9,  "type": "text",   "regex": ".*",                      "required": false},
            "Home Contact":                      {"index": 10, "type": "text",   "regex": ".*",                      "required": false},
            "Destination Contact":               {"index": 11, "type": "text",   "regex": ".*",                      "required": false},
            "Guardian(s)":                       {"index": 12, "type": "list",   "source" : "IDS",                   "required": false},
            "Luggage":                           {"index": 13, "type": "list",   "source" : "IDS",                   "required": false},
            "Weight (KG)":                       {"index": 14, "type": "read",   "source" : "WEIGHT", "default": 82, "required": false},
            "Authority To Release Information?": {"index": 15, "type": "option", "options":["", "Y", "N"],           "required": false},
            "Accommodation":                     {"index": 16, "type": "text",   "regex": ".*",                      "required": false},
            "Dietary Requirements":              {"index": 17, "type": "text",   "regex": ".*",                      "required": false},
            "Notes":                             {"index": 18, "type": "text",   "regex": ".*",                      "required": false}
        },
        "flags": ["Blacklisted", "Cleared", "Medical", "Screened", "Searched"],
        "keys": ["Display Name"]
    },
    "Group":
    {
        "fields":
        {
            "Display Name": {"index": 0, "type": "text", "regex": ".*", "required": true},
            "Weight (KG)":  {"index": 1, "type": "sum",  "cat": ["Person"], "target": "Weight (KG)", "default": 82, "required": false},
            "Souls":        {"index": 2, "type": "count", "cat": ["Person"], "required": false},
            "Notes":        {"index": 3, "type": "text", "regex": ".*", "required": false}
        },
        "flags": ["Blacklisted", "Cleared", "Medical", "Screened", "Searched"],
        "keys": ["Display Name"]
    },
    "Item":
    {
        "fields":
        {
            "Display Name": {"index": 0, "type": "text", "regex": ".*", "required": true},
            "Description":  {"index": 1, "type": "text", "regex": ".*", "required": false},
            "Owner":        {"index": 2, "type": "list", "source" : "IDS", "required": false},
            "Notes":        {"index": 3, "type": "text", "regex": ".*", "required": false}
        },
        "flags": ["Prohibited", "Screened", "Searched"],
        "keys": ["Display Name"]
    },
    "Bag":
    {
        "fields":
        {
            "Display Name": {"index": 0, "type": "text", "regex": ".*", "required": true},
            "Owner":        {"index": 1, "type": "list", "source" : "IDS", "required": false},
            "Priority":     {"index": 2, "type": "option", "options": ["", "High", "Medium", "Low"], "required": false},
            "Weight (KG)":  {"index": 3, "type": "read", "source": "WEIGHT", "default": 8, "required": false},
            "DG Class":     {"index": 4, "type": "option", "options": ["", "1.1", "1.2", "1.3", "1.4", "1.5", "1.6", "2.1", "2.2", "2.3", "3", "4.1", "4.2", "4.3", "5.1", "5.2", "6.1", "6.2", "7", "8", "9.I", "9.II", "9.III"]},
            "Notes":        {"index": 5, "type": "text", "regex": ".*", "required": false}
        },
        "flags": ["Prohibited", "Screened", "Searched"],
        "keys": ["Display Name"]
    },
    "Vessel":
    {
        "fields":
        {
            "Display Name":        {"index": 0, "type": "text", "regex": ".*", "required": true},
            "Callsign":            {"index": 1, "type": "text", "regex": ".*", "required": false},
            "Type":                {"index": 2, "type": "text", "regex": ".*", "required": false},
            "Estimated Arrival":   {"index": 3, "type": "text", "regex": ".*", "required": false},
            "Actual Arrival":      {"index": 4, "type": "text", "regex": ".*", "required": false},
            "Estimated Departure": {"index": 5, "type": "text", "regex": ".*", "required": false},
            "Actual Departure":    {"index": 6, "type": "text", "regex": ".*", "required": false},
            "Origin":              {"index": 7, "type": "text", "regex": ".*", "required": false},
            "Destination":         {"index": 8, "type": "text", "regex": ".*", "required": false},
            "Capacity (KG)":       {"index": 9, "type": "text", "regex": ".*", "required": false},
            "Weight (KG)":         {"index": 10, "type": "sum",  "cat": ["Person", "Bag"], "target": "Weight (KG)", "default": 82, "required": false},
            "Souls":               {"index": 11, "type": "count", "cat": ["Person"], "required": false},
            "Notes":               {"index": 12, "type": "text", "regex": ".*", "required": false}
        },
        "flags": ["Arrived", "Departed", "Ready"],
        "keys": ["Display Name"]
    },
    "Lane":
    {
        "fields":
        {
            "Display Name": {"index": 0, "type": "text", "regex": ".*", "required": true},
            "Responsible":  {"index": 1, "type": "text", "regex": ".*", "required": false},
            "Notes":        {"index": 2, "type": "text", "regex": ".*", "required": false}
        },
        "keys": ["Display Name"]
    },
    "Station":
    {
        "fields":
        {
            "Display Name": {"index": 0, "type": "text", "regex": ".*", "required": true},
            "Responsible":  {"index": 1, "type": "text", "regex": ".*", "required": false},
            "Notes":        {"index": 2, "type": "text", "regex": ".*", "required": false}
        },
        "keys": ["Display Name"]
    },
    "Evacuation":
    {
        "fields":
        {
            "Display Name": {"index": 0, "type": "text", "regex": ".*", "required": true},
            "Responsible":  {"index": 1, "type": "text", "regex": ".*", "required": false},
            "Notes":        {"index": 2, "type": "text", "regex": ".*", "required": false}
        },
        "keys": ["Display Name"]
    }
